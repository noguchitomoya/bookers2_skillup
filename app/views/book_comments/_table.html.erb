<table>
  <% book_comments.each do |comment| %>
  <tr>
    <td><%= attachment_image_tag(comment.user, :profile_image, size: "100x100", fallback: "no-image-icon.jpg") %></td>
    <td><%= comment.body %></td>
    <% if current_user.id == comment.user_id%>
        <td><%= link_to "削除", book_comment_path(comment), method: :delete, class: "btn btn-danger", remote: true%></td>
    <% end %>
  </tr>
  <% end %>
</table>